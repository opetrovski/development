<project name="Macros for developer scripts" default="" basedir=".">
  <macrodef name="verifyFileExists">
    <attribute name="filePath" />
    <sequential>
      <fail message="File not found: @{filePath}">
        <condition>
          <not>
            <available file="@{filePath}" />
          </not>
        </condition>
      </fail>
    </sequential>
  </macrodef>
</project>