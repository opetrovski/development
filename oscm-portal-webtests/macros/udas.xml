    <attribute name="concurrencyCheck" default="false" />
    <sequential>
      <clickLink href="/subscription/editUdas.jsf" />
	  <clickElement xpath="//*[contains(@id, 'subscriptionListForm:subscriptionsTable') and contains(.//text(),'@{subscriptionId}')]" />
