  <macrodef name="mpl_tags.changeTagOfService">
    <attribute name="url" />
    <attribute name="userId" />
    <attribute name="service" />
    <attribute name="tagValue" />
    <sequential>
      <storeProperty name="techServiceId" value="@{service}" />

      <login.loginAsSupplier url="@{url}" userId="@{userId}" />
